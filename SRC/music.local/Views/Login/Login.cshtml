@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Login</title>
    <link href="~/Content/bootstrap3.3.7/css/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/CSS/Login.css" rel="stylesheet" />
    <script src="~/Content/JS/jquery-3.1.1.min.js"></script>
</head>
<body onclick="focusInput()">
    <div class="login-form">
        <div class="input-wraper">
            @using (Html.BeginForm("Login", "Login", FormMethod.Post))
            {
                <input type="password" required class="form-control" name="pass" id="pass" />
                <input type="hidden" required class="form-control" value="@(ViewBag.RediectURL??"/")" name="ru" id="ru" />
                <button type="submit" class="btn btn-default">Login</button>
            }
        </div>
    </div>
</body>
</html>
<script>
    $(function () {
        focusInput();
    });
    function focusInput() {
        $("#pass").focus();

    }

</script>
